<%= flash[:notice] %>

<h1>レビュー</h1>

<% @whiskeys.each do |whiskey| %>

<%= link_to whiskey_path(whiskey) do %>
 <%= image_tag whiskey.whiskey_image, size:"300x380", alt: "ウイスキーの写真" %>
<% end %>

<%= whiskey.user.name %>

<%= whiskey.name %>

<%= whiskey.price_range %>

<p>ライト</p>
  <div class="graph">
    <div style="padding-left: <%= whiskey.taste %>px;"></div>
    <div class="point"></div>
  </div>
<p>リッチ</p>

<p>フルーティー</p>
  <div class="graph">
    <div style="padding-left: <%= whiskey.scent %>px;"></div>
    <div class="point"></div>
  </div>
<p>スモーキー</p>

<p>コストパフォーマンス</p>
<%= render "rate", whiskey: whiskey %>

<% if whiskey.tags.nil? %>
  <%= "タグはありません" %>
<% else %>
  <%= whiskey.tags.map(&:tag).join(',') %>
<% end %>

<div id="favorite_buttons_<%= whiskey.id %>">
  <%= render "public/favorites/favorites", whiskey: whiskey %>
</div>

<% end %>