<div class="my_profile_area">
  <div>
    <%= image_tag user.get_profile_image.variant(resize_to_fill: [130, 130]), alt: "プロフィール画像" %>
    <p class="mt-4"><%= user.name %></p>
    <div>Reviews：(<%= user.whiskeys.count %>)</div>
    <div>
      <% if user.name != "ゲストユーザー" %>
       <%= link_to "プロフィール編集", edit_user_path(user), class:"link my-3  text-white btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
    <div>
      <% if user == current_user %>
       <%= link_to "お気に入りリスト", users_user_favorites_path, class:"link my-3  text-white btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>