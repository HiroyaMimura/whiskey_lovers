<h2>ログイン</h2>

<%= flash[:notice] %>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class="field">
    <%= f.label :"ニックネーム" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
