<% if whiskey.favorited_by?(current_user) %>
  <%= link_to whiskey_favorites_path(whiskey), method: :delete, remote: true, style:"text-decoration: none;" do %>
    <span class="favorite-button">
      <i class="fas fa-heart fa-2x" style="color: #e82a2a;"></i>
      <span class="favorite_counts"><%= whiskey.favorites.count %></span>
    </span>
  <% end %>
<% else %>
  <%= link_to whiskey_favorites_path(whiskey), method: :post, remote: true, style:"text-decoration: none;" do %>
    <span class="favorite-button">
      <i class="far fa-heart fa-2x" style="color: #e82a2a;"></i>
      <span class="favorite_counts"><%= whiskey.favorites.count %></span>
    </span>
  <% end %>
<% end %>