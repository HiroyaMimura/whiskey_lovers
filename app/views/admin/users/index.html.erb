<h2 class="title">User list</h2>
<hr>

<div class="container">
  <% @users.each do |user| %>
    <div class="row d-md-flex justify-content-md-center mt-2 mb-5 offset-md-1">
      <div class="col-4 mt-2 mr-1" >
        <%= link_to admin_user_path(user) do %>
          <%= image_tag user.get_profile_image.variant(resize_to_fill: [130, 130]), alt:"プロフィール画像" %>
        <% end %>
      </div>
      <div class="col-7 ml-md-4" >
        <div>nickname：<%= user.name %></div>

        <div class="mt-3">reviews：(<%= user.whiskeys.count %>)</div>

        <div class="mt-3">comments：(<%= user.whiskey_comments.count %>)</div>

        <div class="mt-3">registration status：
          <% if user.is_deleted == false %>
            有効
          <% else %>
            退会済み
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
</div>

<%= paginate @users %>