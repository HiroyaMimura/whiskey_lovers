<h2 class="title">ユーザーリスト</h2>
<hr>

<div class="container">
  <% @users.each do |user| %>
    <div class="row d-flex justify-content-center mt-2 mb-5">
      <div class="col-3 offset-2" >
        <%= link_to admin_user_path(user) do %>
          <%= image_tag user.get_profile_image.variant(resize_to_fill: [150, 150]), alt:"プロフィール画像" %>
        <% end %>
      </div>
      <div class="col-6 ml-4" >
        <div>ニックネーム：<%= user.name %></div>

        <div class="mt-3">投稿数：<%= user.whiskeys.count %>件</div>

        <div class="mt-3">コメント数：<%= user.whiskey_comments.count %>件</div>

        <div class="mt-3">登録状況：
          <% if user.is_deleted == false %>
            有効
          <% else %>
            退会済み
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
</div>

<%= paginate @users %>