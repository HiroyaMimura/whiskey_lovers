<h2 class="title">ユーザー情報</h2>
  <div class="container_fulid">
    <div class="row">
      <div class="profile col-sm-3 ml-sm-5 mt-sm-3">
        <div>
          <%= image_tag @user.get_profile_image.variant(resize_to_fill: [100, 100]), alt:"プロフィール画像" %>

          <div class="mt-2">ニックネーム</div>
          <p><%= @user.name %></p>

          <div>メールアドレス</div>
          <p><%= @user.email %></p>

          <div>コメント数：<%= @user.whiskey_comments.count %>件</div>

          <div class="mt-2">登録状況：
            <% if @user.is_deleted == false %>
              有効
            <% else %>
              退会済み
            <% end %>
          </div>
          <%= link_to "プロフィール編集", edit_admin_user_path(@user), class:"link my-3  text-white btn btn-sm btn-outline-secondary" %>
          </div>
        </div>

      <div class="col-sm-8 ml-md-5 mb-sm-3">
        <% unless @whiskeys.blank? %>
          <% @whiskeys.each do |whiskey| %>
            <div class="row">
              <div class="whiskey_image col-md-4 mt-md-4">
                <%= link_to admin_whiskey_path(whiskey) do %>
                 <%= image_tag whiskey.whiskey_image.variant(resize_to_fill: [260, 260]), alt: "ウイスキーの写真" %>
                <% end %>
              </div>

              <div class="col-md-7 ml-2 mb-5">
                <div class="mb-2">
                  <span class="mr-5">銘柄</span>
                  <%= whiskey.name %>
                </div>

                <div class="mb-2">
                  <span class="mr-4">価格帯</span>
                  <%= whiskey.price_range %>
                </div>

                <div class="taste_scent_graph">
                  <div>ライト</div>
                  <div class="graph1">
                    <div style="padding-left: <%= whiskey.taste %>px;"></div>
                    <div class="point"></div>
                  </div>
                  <div>リッチ</div>
                </div>

                <div class="taste_scent_graph">
                  <div>フルーティー</div>
                  <div class="graph2">
                    <div style="padding-left: <%= whiskey.scent %>px;"></div>
                    <div class="point"></div>
                  </div>
                  <div>スモーキー</div>
                </div>

                <div>コストパフォーマンス</div>
                <div>
                  <%= render "public/whiskeys/rate", whiskey: whiskey %>
                </div>

                <div class="mt-3 mb-1">タグ</div>
                <div>
                  <% if whiskey.tags.blank? %>
                    <%= "タグはありません" %>
                  <% else %>
                   #<%= whiskey.tags.map(&:tag).join(' #') %>
                  <% end %>
                </div>

                <div class="mt-3">
                  <%= "いいね数：#{whiskey.favorites.count}件" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <h3 class="ml-5 pl-sm-5 my-5">投稿はありません</h3>
        <% end %>
      </div>
    </div>
  </div>

<%= paginate @whiskeys %>